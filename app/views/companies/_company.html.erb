<div class="row">
  <% @companies.each do |company| %>
    <div class="col-lg-3 col-md-6 col-xs-12">
      <div class="card">
        <%= link_to company do %>
          <div>
            <% if company.images.present? %>
              <%= image_tag(company.thumbnail(0), :class => "thumbnail_img") %>
            <% else %>
              <%= image_tag("http://via.placeholder.com/253x300?text=No+Image") %>
            <% end %>
          </div>
          <div class="card-body text-dark pb-0">
            <h6 class="card-title"><%= truncate company.title, length: 50 %></h6>
            <p class="small">No. <%= company.id %><br><%= company.created_at.strftime('%m/%d %H:%M') %>, 조회수 <%= company.view.to_i %></p>
          </div>
        <% end %>
      </div>
      <br>
    </div>
  <% end %>
</div>