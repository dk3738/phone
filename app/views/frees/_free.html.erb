<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col-1">No.</th>
            <th scope="col-6" class="text-center">제목</th>
            <th scope="col-2">작성자</th>
            <th scope="col-2">작성일</th>
            <th scope="col-1">조회</th>
        </tr>
    </thead>
    <tbody>
        <% @frees.each do |free| %>
        <tr>
            <th scope="row"><%= free.id %></th>
            <td>
                <%= link_to free, class: "text-muted" do %>
                <span><strong><%= truncate free.title, length: 50 %></strong></spanass=>
                <% end %>
            </td>   
            <td><%= free.user.name %></td>
            <td class="small text-muted"><%= free.created_at.strftime('%m/%d %H:%M') %></td>
            <td><%= free.view_count.to_i %></td>
        </tr>
        <% end %>
    </tbody>
</table>